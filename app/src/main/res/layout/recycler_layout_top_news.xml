<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="13dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/news_image"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/desktop" />

            <TextView
                android:id="@+id/news_headline_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="WhatsAppâ€™s new Windows app may tempt you to ditch the web app"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/category_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/red_bg"
            android:paddingLeft="4dp"
            android:paddingTop="3dp"
            android:paddingRight="4dp"
            android:layout_gravity="end"
            android:layout_marginTop="80dp"
            android:layout_marginRight="8dp"
            android:paddingBottom="4dp"
            android:text="Google"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/baseline_access_time_24"

                />


            <TextView
                android:id="@+id/time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 hours ago"
                android:layout_marginLeft="7dp"/>

            <ImageView
                android:id="@+id/favorite_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/outline_star_border_24"
                android:layout_marginLeft="200dp"/>




        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>